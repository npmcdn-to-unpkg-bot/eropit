<div class="sidebar twelve cols">
  <div class="card" style="margin-bottom: 8px;">
    <div class="head">
      <i class="icon ion-android-list"></i>&nbsp;サイトメニュー
    </div>
    <div class="body card-menu">
      <ul>
        <%= link_to root_path do %>
