<% urls = ['http://www.mgstage.com/js/mgs_sample_movie.js?p=200GANA-1077&s=1&c=6PYILNLH26JYZYLKBFKJYBLD3M',
           'http://www.mgstage.com/js/mgs_sample_movie.js?p=SIRO-2790&s=1&c=6PYILNLH26JYZYLKBFKJYBLD3M',
           'http://www.mgstage.com/js/mgs_sample_movie.js?p=200GANA-1040&s=1&c=6PYILNLH26JYZYLKBFKJYBLD3M',
           'http://www.mgstage.com/js/mgs_sample_movie.js?p=230ORE-095&s=1&c=6PYILNLH26JYZYLKBFKJYBLD3M',
           'http://www.mgstage.com/js/mgs_sample_movie.js?p=277DCV-001&s=1&c=6PYILNLH26JYZYLKBFKJYBLD3M'] %>
<div class="row">
  <%= render 'layouts/featured_videos' %>
</div>

<div class="tx-center">

  <%= render 'layouts/ad' %>
  <%= render 'layouts/ad-mobile' %>

</div>

<div class="row">
  <div class="right eight cols">
    <div class="row">
      <div class="twele cols card">
        <div class="head">
          <%= link_to @article.link, target: "_blank" do %>
            <%= @article.title %>
          <% end %>
        </div>
        <div class="body">
          <%= link_to @article.link, target: "_blank" do %>
            <img src="<%= @article.thumbnail %>" width="100%" alt="<%= @article.title %>" />
          <% end %>
          <div class="video-info">
            <div class="row" style="position: relative;">
              <div class="ten cols">
                <%= link_to @article.link, target: "_blank" do %>
                  <h1 class="video-title"><%= @article.title %></h1>
                <% end %>
              </div>
              <div class="two cols">
                <span data-video-id="<%= @article.id %>" class="add-favorite-btn"><i class="icon ion-plus"></i>&nbsp;お気に入りに追加</span>
              </div>
            </div>
            <div class="video-meta">
              <span class="left video-duration"><i class="icon ion-clock"></i>&nbsp;再生時間：<%= @article.duration %></span>
              <span class="right video-host"><i class="icon ion-earth"></i>&nbsp;<%= @article.host %></span>
            </div>
            <hr>
            <p><%= @article.description %></p>
            <%= link_to @article.link, target: "_blank" do %>
            <div class="tx-center">
              <span style="margin: 12px 0; width: 100%; padding: 8px;" class="btn btn-md fill-dark"><i class="icon ion-share"></i>&nbsp;動画を見る</span>
            </div>
            <% end %>
            <div class="tags">
              <% @article.tag_list.each do |tag| %>
                <%= render 'layouts/tag', tag: tag %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="left four cols">
    <div class="row">
      <h6 class="sub-heading">オススメMGS動画</h6>
    </div>
    <div class="tx-center">
      <script type="text/javascript" charset="utf-8" src="<%= urls[rand(urls.count)] %>"></script>
    </div>
    <%= render 'layouts/sidebar' %>
  </div>
  <div class="twelve cols">
    <div class="row">
      <h6 class="sub-heading">関連動画</h6>
    </div>
    <% @related_articles.each_slice(3) do |articles| %>
      <div class="row">
        <% articles.each do |article| %>
          <div class="four cols card">
            <%= render 'layouts/article_card', article: article %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="twelve cols">
    <div id="eroterest_partsv21" class="eroterest_partsv2"></div><script src="http://bpm.eroterest.net/v2/?w=%E3%83%8A%E3%83%B3%E3%83%91&e=%E7%84%A1%E4%BF%AE%E6%AD%A3&n=4&rn=4&spn=1&sprn=1&fc=&ts=1&tp=&tbg=&tsz=12&tr=&tc=333333&tmc=666666&tu=0&is=1&mts=0&ds=&dsz=&dr=&dc=&df=&ibg=&ibm=&ids=8&ib=&ibc=eeeeee&ir=2&sf=1"></script>
  </div>
</div>
