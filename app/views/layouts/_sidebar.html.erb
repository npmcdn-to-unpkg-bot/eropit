        <%= form_tag search_articles_path, method: :get do %>
          <span><i class="icon ion-search"></i>&nbsp;クイックサーチ</span>
          <%= text_field_tag :search, params[:search], placeholder: '動画を検索' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card" style="margin-bottom: 8px;">
    <div class="head">
      <i class="icon ion-pricetags"></i>&nbsp;人気のタグ
    </div>
    <div class="body">
      <ul style="margin: 0">
        <% @sidebar_tags.each do |tag| %>
          <%= render 'layouts/tag', tag: tag %>
        <% end %>
      </ul>
    </div>
  </div>
