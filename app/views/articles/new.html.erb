<div class="row">
  <div class="left three cols">
    <%= render 'layouts/manage_side_bar' %>
  </div>
  <div class="right nine cols article-form">
    <div class="card">
      <% unless @article.nil? %>
        <% if @article.errors.any? %>
          <% @article.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>
        <% end %>
      <% end %>
      <%= form_for @article do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
        <label>Thumbnail</label>
        <%= f.text_field :thumbnail %>
        <label>Description</label>
        <%= f.text_area :description %>
        <label>Link</label>
        <%= f.text_field :link %>
        <label>Duration</label>
        <%= f.text_field :duration %>
        <label>Host</label>
        <%= f.text_field :host %>
        <label>Category</label>
        <%= f.collection_select :category_id, Category.all, :id, :title %>
        <label>Tags</label>
        <ul id="article-tags"></ul>
        <%= f.submit 'Save', class: "btn fill-red" %>
      <% end %>
    </div>
  </div>
</div>

<style media="screen">
  .article-form input {
    width: 100%;
  }
</style>
